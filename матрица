#include <iostream> // подключаем библиотеку ввода/ввывода
using namespace std; // подключаем для использования cout/cin пространство имен
 
int main()
{
    setlocale(LC_ALL, "russian"); // подключаем ввод/ввывод русских символов
    int column, row; //объявляем переменные для размера матрицы
    
    cout << "введите размер матрицы : "; //просим ввести размер
    cin >> column >> row; //вводим с клавиатур наши значения
    cout << "\nрезультатыЖ\n";
    
    int** arr = (int**)malloc(column * sizeof(int*)); // создание массива указателей
    for (int i = 0; i < row; i++){ //цикл для заполнения массива
        arr[i] = (int*)malloc(row * sizeof(int)); // создание элементов в массиве, которые являются массивом указателей на 1й элемент своего массива
    }
    
    int counter = 0; // переменная для заполнения матрицы
    for (int i = 0; i < column; i++){ //цикл для столбов
        for (int j = 0; j < row; j++){ //цикл для строк
            arr[i][j] = counter; // заполнение массива
            cout << arr[i][j] << "\t"; // вывод массива на экран
            counter++; // инкримент переменной
        }
        cout << endl; // перевод на новую строку
    }
    return 0;
}
